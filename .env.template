# Xpress.Delivery MVP Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# XPRESS.DELIVERY API CONFIGURATION
# =============================================================================
XPRESS_API_BASE_URL=https://api.xpress.delivery
XPRESS_API_USERNAME=your-email@xpress.delivery
XPRESS_API_PASSWORD=your-password

# =============================================================================
# GOOGLE MAPS API CONFIGURATION
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Required Google Maps APIs:
# - Places API (for address autocomplete)
# - Directions API (for route calculation)
# - Geocoding API (for address validation)
# - Distance Matrix API (for distance calculation)

# =============================================================================
# LOCATIONIQ API CONFIGURATION (FREE ALTERNATIVE - 5k requests/day)
# =============================================================================
LOCATIONIQ_API_KEY=your-locationiq-api-key
# Sign up at https://my.locationiq.com/register
# Free tier: 5,000 requests/day (150,000/month)
# No credit card required!

# =============================================================================
# REVOLUT PAYMENT CONFIGURATION (Optional)
# =============================================================================
REVOLUT_API_KEY=your-revolut-merchant-api-key
REVOLUT_WEBHOOK_SECRET=your-webhook-secret
REVOLUT_PUBLIC_KEY=your-revolut-public-key
REVOLUT_ENVIRONMENT=sandbox
# Set to 'prod' for production, 'sandbox' for testing

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
# Set to 'production' for production deployment

APP_DEBUG_MODE=true
# Set to 'false' for production

APP_SHOW_TEST_BUTTON=true
# Set to 'false' for production

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# For production deployment, you might want to add:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# CORS_ENABLED=true